RewriteEngine on

# не позволять httpd отдавать файлы, начинающиеся с точки (.htaccess, .svn, .git и прочие)
RedirectMatch 403 /\..*$
# не позволять httpd отдавать sql файлы
RedirectMatch 403 /(?i).+\.sql$
# не позволять httpd отдавать cli файл
RedirectMatch 403 /cli.php$
# если директория или файл существуют, использовать их напрямую
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
# иначе отправлять запрос на файл index.php
RewriteRule . index.php

# gzip encoding enable
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE application/json
</IfModule>

# PHP настройки
#php_value xdebug.profiler_enable 0
php_value upload_max_filesize 2000M
php_value post_max_size 2000M

php_value display_errors on
php_value error_reporting -1
